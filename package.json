{
  "name": "swissted-web-components",
  "version": "1.0.3",
  "private": true,
  "description": "web component version of swissted project",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm-run-all -p scss:watch serve",
    "scss:watch": "sass --watch src/sass:dev/stylesheets",
    "ts:watch": "tsc --watch",
    "serve": "wds --node-resolve --watch",
    "build": "npm-run-all -s clean build:scss build:ts bundle",
    "clean": "rimraf dev build",
    "build:scss": "sass --style=compressed --no-source-map src/sass:dev/stylesheets",
    "build:ts": "tsc",
    "bundle": "rollup -c --context this",
    "prepare": "husky install",
    "pretty-quick": "pretty-quick",
    "pre-commit": "pretty-quick --staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skoch/swissted-web-components.git"
  },
  "keywords": [
    "web",
    "components"
  ],
  "author": "stephen@koch.dev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/skoch/swissted-web-components/issues"
  },
  "homepage": "https://github.com/skoch/swissted-web-components#readme",
  "dependencies": {
    "lit": "^2.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@web/dev-server": "^0.1.34",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.11.0",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "reload": "^3.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.4.3",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.55.0",
    "typescript": "^4.8.3"
  }
}
